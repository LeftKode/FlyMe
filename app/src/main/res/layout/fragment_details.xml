<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobiledev.uom.flyme.DetailsActivityFragment"
    tools:showIn="@layout/activity_details">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Μετάβαση"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_departView" />

        <TextView
            android:text="departLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_departLocation" />

        <TextView
            android:text="depart date/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_depart_date_time" />

        <TextView
            android:text="duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_depart_duration" />

        <TextView
            android:text="Επιστροφή"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_arrivalView" />

        <TextView
            android:text="arrivalLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_arrivalLocation" />

        <TextView
            android:text="arrival date/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_arrival_date_time" />

        <TextView
            android:text="duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_arrival_duration" />

        <TextView
            android:text="airline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_airline" />

        <TextView
            android:text="price per adult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_adult_price"
            android:textAlignment="textEnd" />

        <TextView
            android:text="net_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_adult_net"
            android:textAlignment="textEnd" />

        <TextView
            android:text="tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_adult_tax"
            android:textAlignment="textEnd" />

        <TextView
            android:text="price per child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_child_price"
            android:textAlignment="textEnd" />

        <TextView
            android:text="net_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_child_net"
            android:textAlignment="textEnd" />

        <TextView
            android:text="tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_child_tax"
            android:textAlignment="textEnd" />

        <TextView
            android:text="price per infant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_infant_price"
            android:textAlignment="textEnd" />

        <TextView
            android:text="net_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_infant_net"
            android:textAlignment="textEnd" />

        <TextView
            android:text="tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_infant_tax"
            android:textAlignment="textEnd" />

        <TextView
            android:text="total price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_total_price"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="normal|bold" />
    </LinearLayout>
</ScrollView>
