<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobiledev.uom.flyme.DetailsActivityFragment"
    tools:showIn="@layout/activity_details">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/details_depart_layout">

            <TextView
                android:text="@string/departure_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_departView"
                android:textStyle="normal|bold" />

            <TextView
                android:text="departAirport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_depart_airport" />

            <TextView
                android:text="depart date/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_depart_date_time" />

            <TextView
                android:text="arrivalAirport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_arrival_airport" />

            <TextView
                android:text="arrival date/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_arrival_date_time" />

            <TextView
                android:text="duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_arrival_duration" />

            <TextView
                android:text="airlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_airlines" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/details_depart_flights_layout"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/details_return_layout">

            <TextView
                android:text="@string/return_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_arrivalView"
                android:textStyle="normal|bold" />

            <TextView
                android:text="returnAirport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_ret_depart_airport" />

            <TextView
                android:text="return date/rime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_ret_date_time" />

            <TextView
                android:text="ret_arrival_airport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_ret_arrival_airport" />

            <TextView
                android:text="ret_arrival_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_ret_arrival_date_time" />

            <TextView
                android:text="return duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_ret_duration" />

            <TextView
                android:text="return airlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_ret_airlines" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/details_return_flights_layout"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/details_prices_layout">

            <TextView
                android:text="price per adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_adult_price"
                android:textAlignment="textEnd" />

            <TextView
                android:text="price per child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_child_price"
                android:textAlignment="textEnd" />

            <TextView
                android:text="price per infant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_infant_price"
                android:textAlignment="textEnd" />

            <TextView
                android:text="total price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_total_price"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
