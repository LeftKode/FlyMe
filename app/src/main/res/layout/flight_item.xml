<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flight_item_draw"
        android:padding="15dp">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_id_tv"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_origin_airport_tv"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_origin_date_tv"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_duration_tv"
            android:textAlignment="textEnd"
            android:alpha="0.5" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_destin_date_tv"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_destin_airport_tv"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_airline_tv"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flight_stop_tv"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flight_stop_duration_tv"
        android:textAlignment="center"
        android:textSize="14dp"
        android:alpha="0.5" />

</LinearLayout>