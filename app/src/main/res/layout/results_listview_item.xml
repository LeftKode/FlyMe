<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/db_item_draw"
    android:padding="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="@string/result_transition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:paddingLeft="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="airport location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_transition_airport_loc"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="travel time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_transition_times_tv"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/dark_gray"
            android:textStyle="normal|bold" />

        <TextView
            android:text="duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_transition_duration_tv"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorHint"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/result_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_return_details_tv"
            android:paddingLeft="3dp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:text="aiport location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_return_airport_loc"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:text="travel time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_return_times_tv"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textStyle="normal|bold"
            android:textColor="@color/dark_gray" />

        <TextView
            android:text="duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_return_duration_tv"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorHint" />
    </LinearLayout>

    <TextView
        android:text="@string/stops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_leaving_stops_tv"
        android:paddingLeft="2dp"
        android:textStyle="normal|bold"
        android:textColor="@color/black_shade" />

    <TextView
        android:text="@string/return_stops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_return_stops_tv"
        android:paddingLeft="2dp"
        android:textStyle="normal|bold"
        android:textColor="@color/black_shade" />

    <TextView
        android:text="total price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_total_price_tv"
        android:textAlignment="textEnd"
        android:paddingRight="5dp"
        android:textColor="@color/pink_shade"
        android:textStyle="normal|bold" />
</LinearLayout>