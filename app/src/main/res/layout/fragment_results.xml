<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobiledev.uom.flyme.ResultsActivityFragment"
    tools:showIn="@layout/activity_results">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Αναζητήσατε για:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultsSearchInfo"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultsLocationInfo"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultsDateInfo"
            android:textAlignment="center"
            android:textColor="@color/holo_green"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/results_stops"
            android:textColor="@color/dark_black"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="TextView"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:id="@+id/resultsAdultInfo"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textStyle="normal|bold" />

            <TextView
                android:text="TextView"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:id="@+id/resultsChildrenInfo"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textStyle="normal|bold" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultsInfantInfo"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/dark_black"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:id="@+id/results_listview" />

    </LinearLayout>

</RelativeLayout>
